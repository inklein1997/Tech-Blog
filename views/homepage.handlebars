{{>techblog-header}}
<main id="homepage_background" class="d-flex flex-column gap-4 flex-no-wrap overflow-scroll">
    {{#each posts as |post|}}
    <div class="post">
        <div class="d-flex justify-content-between align-items-end post_header">
            <h2 class="post_title" data-post-id="{{id}}">{{title}}</h2>
            <h6 class="post_info">Posted by {{user.user}} on {{format_date createdAt}}</h6>
        </div>
        <h3 class="post_description">{{description}}</h3>
    </div>
    {{/each}}
</main>

<script src="js/seeThread.js"></script>
