{{>techblog-header}}
<main id="homepage_background">
    <div class="post pb-3">
        <h2 class="post_header">Edit Post</h2>
        <form class="d-flex flex-column gap-3 login-signup_form">
            <div class="d-flex flex-column gap-1">
                <div class="d-flex flex-column">
                    <label for="#usernameInputSignIn">Title</label>
                    <input type="text" id="usernameInputSignIn">
                </div>
                <div class="d-flex flex-column">
                    <label for="#passwordInputSignIn">Content</label>
                    <textarea rows="3"></textarea>
                </div>
            </div>
            <div class="d-flex flex-column gap-2">
                <input type="submit" id="updatePostButton" value="Update Post">
                <input type="submit" id="deletePostButton" value="Delete">
            </div>
        </form>
    </div>
</main>